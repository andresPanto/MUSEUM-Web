<%- include ('../shared/general-html/head.ejs')%>
<%- include ('header.ejs') %>
<h1 class="text-center"><b>New Activity</b></h1>
<!--Activity form-->
<!--Mandar este estilo al archivo de estilos-->
<div  style="margin: 0 auto; width:80%;">
    <form action="#" method="POST">
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Activity Name:</label>
            <div class="col-sm-10">
            <input class="form-control" id="name" type="text" name="name" >
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="type" class="col-sm-2 col-form-label" >Type:</label>
            <div class="col-sm-10">
            <input class="form-control" id="type" type="text" name="type">
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="location" class="col-sm-2 col-form-label">Location:</label>
            <div class="col-sm-10">
            <textarea class="form-control" id="location" type="text" name="location"></textarea>
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="initial">Initial Date:</label>
            <input type="date" id="initial" name="initial">
        </div>
        <br>
        <div class="form-group row">
            <label for="final">Final Date:</label>
            <input type="date" id="final" name="final">
        </div>
        <br>
        <div class="form-group row">
            <label for="description" class="col-sm-2 col-form-label">Description:</label>
            <div class="col-sm-10">
            <textarea class="form-control" id="description" type="text" name="description"></textarea>
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="duration" class="col-sm-2 col-form-label">Duration (HH:MM):</label>
            <div class="col-sm-10">
            <input class="form-control" id="duration" type="text" name="duration" >
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="pm" class="col-sm-2 col-form-label">Project Manager:</label>
            <div class="col-sm-10">
            <input class="form-control" id="pm" type="text" name="pm" >
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="pmnumber" class="col-sm-2 col-form-label">PM Phone Number:</label>
            <div class="col-sm-10">
            <input class="form-control" id="pmnumber" type="text" name="pmnumber" >
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="cost" class="col-sm-2 col-form-label">Cost(USD):</label>
            <div class="col-sm-10">
            <input class="form-control" id="cost"  type="number" step="0.01" name="cost" >
            </div>
        </div>
        <br>
        <div class="form-group">
            <label for="image">Add image:</label>
            <input class="form-control-file" type="file" id="image" name="image">
        </div>
    </form>
</div>
<!--Button-->
<div class="d-flex justify-content-center">
    <button class="bg-warning mt-3 btn-lg">Save Activity</button>
</div>