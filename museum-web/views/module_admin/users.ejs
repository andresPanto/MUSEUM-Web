<%- include ('../shared/general-html/head.ejs')%>
<%- include ('header.ejs') %>
<%- include ('./error_message.ejs')%>
<h1 class="text-center"><b>Users</b></h1>
<!--Users list-->
<div class="container">
    <table class="table table-striped table-bordered">
        <tr>
            <th>User ID</th>
            <th>Role</th>
            <th>Username</th>
            <th>E-mail</th>
            <th>Phone Number</th>
            <th>Status</th>
        </tr>
        <!--Iterar con un for-->
        <%users.forEach((user) =>{ %>
        <%const isActive = user.status%>

        <tr>
            <td>
                <%=user.idUser%>
            </td>
            <td>
                Client
            </td>
            <td>
                <%=user.username%>
            </td>
            <td>
                <%=user.email%>
            </td>
            <td>
                <%=user.phoneNumber%>
            </td>
            <td>
                <form action="/users/admin/status/<%=user.idUser%>" method="get">
                    <button type="submit"
                    <%if(isActive){%>
                            class="btn btn-danger"
                    <%}else{%>
                            class="btn btn-success"
                            <%}%>
                    >
                        <span class="glyphicon glyphicon-minus-sign"></span>
                        <%if(isActive){%>
                            Disable
                        <%}else{%>
                            Enable
                        <%}%>
                    </button>

                </form>


            </td>
        </tr>
        <!--Fin for-->
        <% })%>
    </table>
    <hr>
</div>