<%- include ('../shared/general-html/head.ejs')%>
<%- include ('shared/header.ejs')%>

<% if (typeof message != 'undefined'){%>
    <div class="alert alert-info mt-2 mb-2 text-center container" role="alert">
        <%= message %>
      </div>
<% } %>

<% if (typeof error != 'undefined'){%>
    <div class="alert alert-danger mt-2 mb-2 text-center container" role="alert">
        <%= error %>
      </div>
<% } %>
<!--Carousel-->
<!-- Sacar de la base para mostrar-->
<div class="w-75" style="margin: 0 auto;">
    <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
        <!--Carousel images-->
        <div class="carousel-inner">
          <div class="carousel-item active ">
            <img class="d-block w-100" height="500px" src="/images/carousel/img1.png" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" height="500px" src="/images/carousel/img2.png" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" height="500px" src="/images/carousel/img3.png" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
</div>
<!--Top Performances-->
<div class="center_horizontal">
    <div class="container mb-5">
          <h3 class="mb-4 mt-4"><strong>Top Performances</strong></h3>
          <div class="row">
                <!--Recorrer lista de top performances-->
                <% performancesArray.forEach((performance) =>{%>
            <div class ="col-sm">
                <div class="perf-item">
                    <a href="/activities/performance/<%= performance.idActivity %>"><img width="260px" src="<%= performance.imagePath %>"></a>
                    <div>
                        <a href="/activities/performance/<%= performance.idActivity %>"><%= performance.name %></a>
                    </div>
                    <div>
                        Duration: <%=performance.duration%>
                    </div>
                </div>
            </div>
                <% });%>
                <!--Fin recorrido-->
          </div>
    </div>
</div>
<!--Top Exhibitions-->
<div class="center_horizontal">
    <div class="container mb-5">
          <h3 class="mb-4"><strong>Top Exhibitions</strong></h3>
          <div class="row">
                <!--Recorrer lista de top exhibitions-->
                <% exhibitionsArray.forEach((exhibition) =>{%>
            <div class ="col-sm">
                <div class="exh-item">
                    <a href="/activities/exhibition/<%= exhibition.idActivity %>"><img width="260px" src="<%= exhibition.imagePath %>"></a>
                    <div>
                        <a href="/activities/exhibition/<%= exhibition.idActivity %>"><%= exhibition.name %></a>
                    </div>
                    <div>
                        Duration: <%=exhibition.duration%>
                    </div>
                </div>
            </div>
            <% });%>
                <!--Fin recorrido-->
          </div>
    </div>
</div>
<!--Top Films-->
<div class="center_horizontal">
    <div class="container mb-5">
          <h3 class="mb-4"><strong>Top Films</strong></h3>
          <div class="row">
                <!--Recorrer lista de top films-->
                <% filmsArray.forEach((film) =>{%>
            <div class ="col-sm">
                <div class="film-item">
                    <a href="/activities/film/<%= film.idActivity %>"><img width="260px" src="<%= film.imagePath %>"></a>
                    <div>
                        <a href="/activities/film/<%= film.idActivity %>"><%= film.name %></a>
                    </div>
                    <div>
                        Duration: <%= film.duration %>
                    </div>
                </div>
            </div>
            <% });%>
                <!--Fin recorrido-->
          </div>
    </div>
</div>

<!--Visit Us - Fijo-->
<div class="center_horizontal">
    <div class="container mb-5">
          <h3 class="mb-4"><strong>Visit Us</strong></h3>
          <div class="row">
              <!--Inicio for-->
              <% toursArray.forEach((tour) =>{%>
            <div class ="col-sm-6">
                <div class="visit-item">
                    <a href="/activities/tour/<%= tour.idActivity %>"><img width="400px" src="<%= tour.imagePath %>"></a>
                    <div>
                        <a href="/activities/tour/<%= tour.idActivity %>"><%= tour.name %></a>
                    </div>
                    <div>
                        EVERY DAY
                    </div>
                </div>
                </div>
                <% });%>
            <!--Fin for-->
          </div>
    </div>
</div>


<%- include ('shared/footer.ejs')%>