<%- include ('../shared/general-html/head.ejs')%>
<%- include ('shared/header.ejs')%>
<!--Carousel-->
<!-- Sacar de la base para mostrar-->
<div class="w-75" style="margin: 0 auto;">
    <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
        <!--Carousel images-->
        <div class="carousel-inner">
          <div class="carousel-item active ">
            <img class="d-block w-100" src="/images/carousel/img1.png" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/carousel/img2.png" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="/images/carousel/img3.png" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
</div>
<!--Top Performances-->
<div class="center_horizontal">
    <div class="container mb-5">
          <h3 class="mb-4 mt-4"><strong>Top Performances</strong></h3>
          <div class="row">
                <!--Recorrer lista de top performances-->
                <% performancesArray.forEach((performance) =>{%>
            <div class ="col-sm">
                <div class="perf-item">
                    <a href="/performances?view=idperformance1>"><img width="260px" src="<%= performance.imagePath %>"></a>
                    <div>
                        <a href="/performances?view=idperformance1"><%= performance.name %></a>
                    </div>
                    <div>
                        <a href="/performances?view=idperformance1">Duration: <%=performance.duration%></a>
                    </div>
                </div>
            </div>
                <% });%>
                <!--Fin recorrido-->
          </div>
    </div>
</div>
<!--Top Exhibitions-->
