<html lang="en">   
<% include ('../../shared/general-html/head.ejs') %>
<body>
  <title>MUSEUM</title>
  <nav class="navbar navbar-light">
      <a class="navbar-brand" href="/">
      <h2 class="text-secondary"> MUSEUM </h2>
      </a>
      <div style="float: right;">
          <% if (typeof username != 'undefined') { %>
              <a class="navbar-brand" href="/purchases">
              <h2 class="text-secondary"> My activities </h2>
              </a>
              
              <a class="navbar-brand" href="/users/me">
                  <h2> <%= username %> </h2>
              </a>
          
              <a class="navbar-brand" href="/users/logout">
              <h2 class="text-secondary"> Log out </h2>
              </a>
          <% } else { %>
            <!----------------------Modal Login------------------->
            <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Log In</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <!-- Inicio formulario-->
                  <form action="/users/login" method="POST">
                    <div class="modal-body mx-3">
                      <div class="md-form mb-5">
                        <label data-error="wrong" data-success="right" for="username"><b>Username:</b></label>
                        <i class="fas fa-envelope prefix grey-text"></i>
                        <input type="text" id="username" class="form-control validate" name="username" required>
                      </div>

                      <div class="md-form mb-4">
                        <label data-error="wrong" data-success="right" for="defaultForm-pass"><b>Password:</b></label>
                        <i class="fas fa-lock prefix grey-text"></i>
                        <input type="password" id="defaultForm-pass" class="form-control validate" name="password" required>
                      </div>

                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                      <button class="btn btn-success" type="submit">Login</button>
                    </div>
                </form>
                  <!--Fin formulario-->
                </div>
              </div>
            </div>
            <!--------------------------------->
              <a class="navbar-brand" href="#">
              <h3 class="text-secondary" data-toggle="modal" data-target="#modalLoginForm"> Login </h3>
              </a>
              <a class="navbar-brand" href="/users/signup">
              <h3 class="text-secondary"> Sign up </h3>
              </a>
          <% } %>
      </div>
  </nav>
  <hr style = "background-color: brown; height: 1px;">
  <div>
      <ul class="nav nav-justified">
          <li class="nav-item">
            <a  href="/">HOME</a>
          </li>
          <li class="nav-item">
            <div class="dropdown">
              <button class="btn bg-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                VISIT
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <!--Redirect to activity, not to category-->
                <a class="dropdown-item" href="/activities/tour/5">Guided Tours</a>
                <a class="dropdown-item" href="/activities/tour/6">Unguided Tours</a>
              </div>
            </div>
          </li>
          <li class="nav-item">
            <a  href="/activities/performance">PERFORMANCES</a>
          </li>
          <li class="nav-item">
              <a  href="/activities/exhibition">EXHIBITIONS</a>
            </li>
            <li class="nav-item">
              <a  href="/activities/film">FILMS</a>
            </li>
        </ul>
        <br>
  </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>