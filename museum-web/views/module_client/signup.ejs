<%- include ('../shared/general-html/head.ejs')%>
<%- include ('shared/header.ejs')%>
<!--Title-->
<div class="text-center">
<h2>Welcome to MUSEUM</h2>
<h3>Please, complete the following form.</h3>
</div>
<!--Mandar este estilo al archivo de estilos-->
<div  style="margin: 0 auto; width:80%;">
    <form action="#" method="POST">
        <div class="form-group row">
            <label for="fullname" class="col-sm-2 col-form-label">Full Name:</label>
            <div class="col-sm-10">
            <input class="form-control" id="fullname" type="text" name="fullname" >
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label" >E-mail:</label>
            <div class="col-sm-10">
            <input class="form-control" id="email" type="email" name="email">
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="phone" class="col-sm-2 col-form-label">Phone Number:</label>
            <div class="col-sm-10">
            <input class="form-control" id="phone" type="number" name="phone">
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Username:</label>
            <div class="col-sm-10">
            <input class="form-control" id="username" type="text" name="username">
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
            <input class="form-control" id="password" type="password" name="password">
            </div>
        </div>
        <br>
        <div class="form-group row">
            <label for="cpassword" class="col-sm-2 col-form-label">Confirm Password:</label>
            <div class="col-sm-10">
            <input class="form-control" id="cpassword" type="password" name="cpassword">
            </div>
        </div>
        <br>
        <div class="form-group">
            <label for="avatar">Select a file:</label>
            <input class="form-control-file" type="file" id="avatar" name="avatar">
        </div>
    </form>
</div>
<!--Buttons-->
<div class="d-flex justify-content-center">
<button class="bg-warning mt-3 btn-lg">Sign me Up!</button>
</div>